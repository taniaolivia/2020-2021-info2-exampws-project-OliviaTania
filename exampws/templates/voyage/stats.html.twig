{% extends 'base.html.twig' %}

{% block title %}Hello VoyageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des participants</h1>

    <table>
        <thead>
        <tr>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Adresse </th>
        </tr>
        </thead>
        <tbody>
        {% for destination in destination %}
            {%  if destination.lieudestination == "Toulouse" %}
                <tr>
                    <th scope="row">{{ destination.lieudestination }}</th>
                </tr>
                {% for participant in participant %}
                    <tr>
                        <th scope="row">{{ voyages.nompart }}</th>
                    </tr>
                {% endfor %}
                <tr>
                    <th scope="row">{{ voyages.resumevoyage }}</th>
                </tr>
            {% endif %}
        {% endfor %}

</div>
{% endblock %}
