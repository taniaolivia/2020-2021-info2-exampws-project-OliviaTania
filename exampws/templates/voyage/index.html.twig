{% extends 'base.html.twig' %}

{% block title %}Liste des voyages{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des voyages</h1>

    <table>
        <thead>
            <tr>
                <th scope="col">Ref Voyage</th>
                <th scope="col">Date Voyage</th>
                <th scope="col">Résumé Voyage</th>
            </tr>
        </thead>
        <tbody>
            {% for voyages in voyages%}
                <tr>
                    <th scope="row">{{ voyages.refvoyage }}</th>
                </tr>
                <tr>
                    <th scope="row">{{ voyages.datedepartvoyage }}</th>
                </tr>
                <tr>
                    <th scope="row">{{ voyages.resumevoyage }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
